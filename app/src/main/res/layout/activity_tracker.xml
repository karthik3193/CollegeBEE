<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tracker"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.karthik.collegebee.Tracker">

    <TextView
        android:text="Address:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="29dp"
        android:id="@+id/textView2" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        >
        <TextView
            android:layout_marginLeft="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waiting for LOCATION"
            android:id="@+id/addr"/>
    </LinearLayout>




    <Button
        android:text="Track Me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btntrack"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btnlocate"
        android:layout_alignStart="@+id/btnlocate"
        android:elevation="24dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/colorPrimary"/>

    <Button
        android:text="Locate Me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:id="@+id/btnlocate"
        android:layout_below="@+id/btntrack"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:backgroundTint="@color/colorAccent"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Your Option"
        android:textSize="20dp"
        android:id="@+id/txt"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
